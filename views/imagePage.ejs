            sunCanvasCtx.moveTo(x1, y1);
            sunCanvasCtx.lineTo((x1+leng*Math.cos(theta)), (y1+leng*Math.sin(theta)));
            sunCanvasCtx.lineWidth = 5;
            sunCanvasCtx.stroke();
        }
