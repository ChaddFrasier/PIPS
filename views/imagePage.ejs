            obsCanvasCtx.drawImage(obsImg, (obsCanvas.width/2)-20, (obsCanvas.height/2)-20, 75, 75);
            obsCanvasCtx.moveTo(x1, y1);
            obsCanvasCtx.lineTo((x1+leng*Math.cos(theta)), (y1+leng*Math.sin(theta)));
